	text-transform: uppercase;
}

nav a:hover,
nav a:focus {
	outline: none;
	text-decoration: none;
}


/* gmenu-effect: borders slight translate */
.gmenu-effect a {
	padding: 10px;
	color: #9ecdeb;
	text-shadow: none;
	-webkit-transition: color 0.3s;
	-moz-transition: color 0.3s;
	transition: color 0.3s;
}

.gmenu-effect a::before,
.gmenu-effect a::after,
.gmenu-effect a.active::before,
.gmenu-effect a.active::after {
	position: absolute;
	left: 0;
	width: 100%;
	height: 2px;
	background: #9ecdeb;
	content: '';
	opacity: 0;
	-webkit-transition: opacity 0.3s, -webkit-transform 0.3s;
	-moz-transition: opacity 0.3s, -moz-transform 0.3s;
	transition: opacity 0.3s, transform 0.3s;
	-webkit-transform: translateY(-10px);
	-moz-transform: translateY(-10px);
	transform: translateY(-10px);
}
.gmenu-effect a.active::before,
.gmenu-effect a.active::after {
	background: #FFFFFF;
}

.gmenu-effect a::before {
	top: 0;
	-webkit-transform: translateY(-10px);
	-moz-transform: translateY(-10px);
	transform: translateY(-10px);
}

.gmenu-effect a::after {
	bottom: 0;
	-webkit-transform: translateY(10px);
	-moz-transform: translateY(10px);
	transform: translateY(10px);
}
.gmenu-effect a:hover {
	color: #9ecdeb;
}

.gmenu-effect a.active {
	color: #fff;
}

/* white top and bottom lines for active menu element*/
.gmenu-effect a.active::before,
.gmenu-effect a.active::after {
	opacity: 1;
	-webkit-transform: translateY(0px);
	-moz-transform: translateY(0px);
	transform: translateY(0px);
	background:#FFFFFF;
}

.gmenu-effect a:hover::before,
.gmenu-effect a:hover::after{
	opacity: 1;
	-webkit-transform: translateY(0px);
	-moz-transform: translateY(0px);
	transform: translateY(0px);

}

