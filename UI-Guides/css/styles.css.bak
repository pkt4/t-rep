    position: absolute;
    left: 56px;
    top: 80px;
}
.tree-parent {
	font-size:18px;
	margin-bottom: 2px;
}
.tree,
.tree ul {
	margin:0 0 0 1em; /* indentation */
	padding:0;
	list-style:none;
	color:#FFFFFF;
	position:relative;
}

.tree ul {margin-left:.5em} /* (indentation/2) */

.tree:before,
.tree ul:before {
	content:"";
	display:block;
	width:0;
	position:absolute;
	top:0;
	bottom:0;
	left:0;
	border-left:1px solid;
	    height: 69px;
}

.tree li {
	font-size:14px;
	margin:0;
	padding:0 1.5em; /* indentation + .5em */
	line-height:2em; /* default list item's `line-height` */
	position:relative;
}

.tree li:before {
	content:"";
	display:block;
	width:10px; /* same with indentation */
	height:0;
	border-top:1px solid;
	margin-top:-1px; /* border top width */
	position:absolute;
	top:1em; /* (line-height/2) */
	left:0;
}


